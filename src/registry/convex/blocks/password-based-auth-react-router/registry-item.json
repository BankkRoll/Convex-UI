{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "password-based-auth-react-router",
  "type": "registry:block",
  "title": "Password-Based Authentication (React Router)",
  "description": "Complete password-based authentication flow for React Router v7 with Convex Auth. Includes login, sign-up, password reset, protected routes, and full Convex backend.",
  "registryDependencies": [
    "button",
    "input",
    "label",
    "card",
    "alert",
    "avatar",
    "skeleton"
  ],
  "dependencies": [
    "lucide-react",
    "@convex-dev/auth@latest",
    "convex@latest",
    "react-router"
  ],
  "files": [
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/components/login-form.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/components/sign-up-form.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/components/forgot-password-form.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/components/update-password-form.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/components/logout-button.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/app/routes/auth.login.tsx",
      "type": "registry:page",
      "target": "app/routes/auth.login.tsx"
    },
    {
      "path": "src/registry/convex/blocks/password-based-auth-react-router/app/routes/auth.sign-up.tsx",
