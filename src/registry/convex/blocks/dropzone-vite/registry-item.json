{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "dropzone-vite",
  "type": "registry:component",
  "title": "Dropzone (Vite)",
  "description": "A file upload dropzone component for Vite powered by Convex storage. Supports drag and drop, file validation, upload progress, and full Convex backend.",
  "registryDependencies": ["button"],
  "dependencies": ["lucide-react", "react-dropzone", "convex@latest"],
  "files": [
    {
      "path": "src/registry/convex/blocks/dropzone-vite/components/dropzone.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-vite/hooks/use-convex-upload.ts",
      "type": "registry:hook"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-vite/convex/schema.ts",
      "type": "registry:file",
      "target": "convex/schema.ts"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-vite/convex/files.ts",
      "type": "registry:file",
      "target": "convex/files.ts"
    }
  ],
  "envVars": {
    "CONVEX_DEPLOYMENT": "",
    "VITE_CONVEX_URL": ""
  }
}
