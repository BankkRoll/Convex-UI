{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "dropzone-astro",
  "type": "registry:component",
  "title": "Dropzone (Astro)",
  "description": "A file upload dropzone component for Astro powered by Convex storage. Supports drag and drop, file validation, upload progress, and full Convex backend.",
  "registryDependencies": ["button"],
  "dependencies": ["lucide-react", "react-dropzone", "convex@latest"],
  "files": [
    {
      "path": "src/registry/convex/blocks/dropzone-astro/components/dropzone.tsx",
      "type": "registry:component"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-astro/hooks/use-convex-upload.ts",
      "type": "registry:hook"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-astro/convex/schema.ts",
      "type": "registry:file",
      "target": "convex/schema.ts"
    },
    {
      "path": "src/registry/convex/blocks/dropzone-astro/convex/files.ts",
      "type": "registry:file",
      "target": "convex/files.ts"
    }
  ],
  "envVars": {
    "CONVEX_DEPLOYMENT": "",
    "PUBLIC_CONVEX_URL": ""
  }
}
